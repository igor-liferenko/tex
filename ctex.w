k=mem_bot;@+while (k <= lo_mem_stat_max) 
     /*set first words of glue specifications*/ 
  {@+glue_ref_count(k)=null+1;
  stretch_order(k)=normal;shrink_order(k)=normal;
  k=k+glue_spec_size;
